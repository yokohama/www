<%= form_for(@word, html: {class: 'form-horizontal', role: 'form'}) do |f| %>
  <%= render :partial => "shares/validation_message", locals: {model: @word} %>
  
    <div class="form-group">
      <%= f.label 'English', for: 'inputEnglish', class: 'col-sm-2 control-label' %>
      <div class="col-xs-4">
        <%= f.text_field :english, class: 'form-control', id: 'inputEnglish', placeholder: 'English' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Japanese', for: 'inputJapanese', class: 'col-sm-2 control-label' %>
      <div class="col-xs-4">
        <%= f.text_field :japanese, class: 'form-control', id: 'inputJapanese', placeholder: 'Japanese' %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Create</button>
      </div>
    </div>
  
<% end %>


