<p id="notice"><%= notice %></p>

<h1>Listing Words</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>English</th>
      <th>Japanese</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.english %></td>
        <td><%= word.japanese %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

